<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIAR SESION"
            android:textAlignment="center"
            android:textColor="#0A176A"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="267dp"
            android:layout_height="244dp"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardCornerRadius="50px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2A77B3"
                            app:cardCornerRadius="25px">

                            <EditText
                                android:id="@+id/correo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#1B1313"
                                android:ems="10"
                                android:hint="Ingrese correo"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="25px"
                                android:paddingRight="25px"
                                android:textColor="#0D1B73"
                                android:textColorHint="#70CFDC" />
                        </androidx.cardview.widget.CardView>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="13dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="#2A77B3"
                            app:cardCornerRadius="25px">

                            <EditText
                                android:id="@+id/clave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#000000"
                                android:ems="10"
                                android:hint="Ingrese contraseña"
                                android:inputType="textPassword"
                                android:paddingLeft="25px"
                                android:paddingRight="25px"
                                android:textColor="#0D1B73"
                                android:textColorHint="#70CFDC" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardCornerRadius="25px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="162dp"
                            android:layout_height="22dp"
                            android:background="#00FFFFFF"
                            android:text="Olvidaste la contraseña?"
                            android:textColor="#000000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restablecer"
                            android:textColor="#0A0E9A"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="266dp"
            android:layout_height="207dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardCornerRadius="70px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/ingresar"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:backgroundTint="#0B1860"
                            android:text="Ingresar"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:cornerRadius="50px" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="24dp" />

                        <Button
                            android:id="@+id/registrarse"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:backgroundTint="#0B1860"
                            android:text="REGISTRARSE"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:cornerRadius="50px" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardCornerRadius="50px">

                    <Button
                        android:id="@+id/registrar"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="#0B1860"
                        android:text="SEGUNDO REGISTRO"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        app:cornerRadius="50px" />
                </androidx.cardview.widget.CardView>

            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>