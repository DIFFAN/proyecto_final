<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img_1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="75px">

            <TableLayout
                android:layout_width="297dp"
                android:layout_height="436dp"
                android:background="@mipmap/img_3"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MENU"
                        android:textAlignment="center"
                        android:textColor="#04187E"
                        android:textSize="48sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardCornerRadius="75px">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/bd"
                                android:layout_width="256dp"
                                android:layout_height="65dp"
                                android:backgroundTint="#0B1860"
                                android:text="BASE DE DATOS"
                                android:textColor="#FFFFFF"
                                app:cornerRadius="55px" />

                            <Button
                                android:id="@+id/stor"
                                android:layout_width="256dp"
                                android:layout_height="65dp"
                                android:backgroundTint="#0B1860"
                                android:text="ALMACENAMIENTO"
                                android:textColor="#FFFFFF"
                                app:cornerRadius="55px" />

                            <Button
                                android:id="@+id/geo"
                                android:layout_width="256dp"
                                android:layout_height="65dp"
                                android:backgroundTint="#0B1860"
                                android:text="GEOLOCALIZACION"
                                android:textColor="#FFFFFF"
                                app:cornerRadius="55px" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:gravity="center"
                    android:paddingTop="50dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#00FFFFFF"
                        app:cardCornerRadius="70px">

                        <Button
                            android:id="@+id/sesion"
                            android:layout_width="256dp"
                            android:layout_height="65dp"
                            android:backgroundTint="#BA2371"
                            android:text="cerrar sesion"
                            android:textColor="#FFFFFF"
                            app:cornerRadius="55px" />
                    </androidx.cardview.widget.CardView>
                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>